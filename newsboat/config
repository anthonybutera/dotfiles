# general settings
auto-reload yes
max-items 50
browser "/usr/bin/vivaldi":"/mnt/c/Users/buterant/AppData/Local/Vivaldi/Application/vivaldi.exe %u" 


# unbind keys
unbind-key ENTER
unbind-key j
unbind-key k
unbind-key J
unbind-key K


# bind keys - vim style
bind-key j down
bind-key k up
bind-key j next articlelist
bind-key k prev articlelist
bind-key J next-feed articlelist
bind-key K prev-feed articlelist
bind-key g home
bind-key G end
bind-key u pageup
bind-key d pagedown
bind-key l open
bind-key h quit
bind-key a toggle-article-read
bind-key n next-unread
bind-key N prev-unread
bind-key s show-urls


# solarized
