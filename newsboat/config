# vim: filetype=newsboatrc

# general settings
auto-reload yes
max-items 50

# miscellaneous
history-limit 0

browser "$TUIR_BROWSER"

# unbind keys
unbind-key ENTER
unbind-key j
unbind-key k
unbind-key J
unbind-key K

# bind keys - vim style
bind-key j next
bind-key k prev

bind-key J next-feed
bind-key K prev-feed

bind-key j down article
bind-key k up article

bind-key J next article
bind-key K prev article

bind-key g home
bind-key G end

bind-key u pageup
bind-key d pagedown

bind-key l open
bind-key h quit

bind-key a toggle-article-read
bind-key n next-unread
bind-key N prev-unread
bind-key s show-urls
bind-key S save
bind-key a mark-feed-read
bind-key A mark-all-feeds-read
bind-key ; open-in-browser


# Gruvbox -- https://github.com/morhetz/gruvbox
color background             color234	color234 			# Faded Black 	Faded Black

color listnormal             color241 	color234 			# Dark Gray		Faded Black
color listnormal_unread      color180	color234			# Peach 		Faded Black

#color listfocus             color234   color214			# Faded Black	Yellow
#color listfocus_unread      color234   color214			# Faded Black	Yellow

color info                   color214   color234			# Yellow		Faded Black
color article                color223   color234			# Yellow		Faded Black

color listfocus              color255   color52			    # White 	    Red
color listfocus_unread       color255   color52			    # White         Red

# highlights
highlight article "^(Title):.*$" color214 color234               # Yellow  Faded Black
highlight article "https?://[^ ]+" color66 color234              # Blue    Faded Black
highlight article "\\[image\\ [0-9]+\\]" color106 color234       # Green   Faded Black

