# general settings
auto-reload yes
max-items 50

# unbind keys
unbind-key ENTER
unbind-key j
unbind-key k
unbind-key J
unbind-key K

# bind keys - vim style
bind-key j down
bind-key k up
bind-key l open
bind-key h quit

# solarized
#color background         default   default
#color listnormal         default   default
#color listnormal_unread  default   default
#color listfocus          black     cyan
#color listfocus_unread   black     cyan
#color info               default   black
#color article            default   default

# Gruvbox
color background         color237   color237    
color listnormal         default    default
color listnormal_unread  default    default
color listfocus          color237   color172
color listfocus_unread   color237   color172
color info               default    color237
color article            color237   color237

# highlights
# highlight article "^(Title):.*$" blue default
# highlight article "https?://[^ ]+" red default
# highlight article "\\[image\\ [0-9]+\\]" green default


# highlights
highlight article "^(Title):.*$" d79921 default               # Yellow / Default
highlight article "https?://[^ ]+" cc241d default             # Red    / Default
highlight article "\\[image\\ [0-9]+\\]" 98971a default       # Green  / Default
